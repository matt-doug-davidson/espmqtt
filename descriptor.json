{
    "name": "flogo-espmqtt",
    "type": "flogo:activity",
    "version": "0.0.1",
    "title": "ESP MQTT Interface",
    "description": "MQTT interface to ESP",
    "homepage": "https://github.com/matt-doug-davidson/espmqtt",
    "settings":[
      {
        "name": "mqttdebug",
        "type": "boolean",
        "value": false,
        "description": "Debug MQTT"
      },
      {
        "name": "host",
        "type": "string",
        "required": true,
        "description": "Broker host"
      },
      {
        "name": "port",
        "type": "string",
        "required": true,
        "description": "Broker port"
      },
      {
        "name": "clientid",
        "type": "string",
        "required": true,
        "description": "Unique Client ID"
      },
      {
        "name": "report",
        "type": "string",
        "required": false,
        "description": "JSON object with report fields"
      }
    ],
    "input": [
      {
        "name": "connectorMsg",
        "type": "object",
        "description": "The message connectorMsg object"
      }
    ],
    "output": [
    ]
  }